{sub_dirs, ["rel"]}.
{plugins, [rebar_covertool]}.

{deps, [
        { lager, "2.*", {git, "https://github.com/basho/lager.git", {tag, "2.0.3"}}},
        { meck, ".*", {git, "https://github.com/eproxus/meck.git", {tag, "0.8.2"}}},
        { covertool, ".*", {git, "https://github.com/idubrov/covertool.git", {branch, "master"}}}
       ]}.

{cover_enabled, true}.  
{erl_opts, [{parse_transform, lager_transform}]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_export_enabled, true}.
{covertool_eunit, {".eunit/eunit.coverdata", "eunit.coverage.xml"}}. % Source file name, output report file name

